<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Calculator">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="57dp"
        android:background="@color/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/affichage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu"
        app:title="Calculator"
        app:titleTextColor="?attr/colorOnPrimary" />
    <TextView
        android:id="@+id/affichage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="70dp"
        android:gravity="bottom|end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textAlignment="viewEnd"
        android:text="0"
        android:textColor="@color/display_text"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/btnoppara"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_utility_bg"
                android:textColor="@color/text_primary"
                android:text="("
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btnclosepara"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_utility_bg"
                android:textColor="@color/text_primary"
                android:text=")"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/clear"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_utility_bg"
                android:textColor="@color/text_primary"
                android:text="C"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_operator_bg"
                android:textColor="@color/text_operator"
                android:text="/"
                android:textSize="24sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="7"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="8"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="9"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_operator_bg"
                android:textColor="@color/text_operator"
                android:text="*"
                android:textSize="24sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="4"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="5"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="6"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_operator_bg"
                android:textColor="@color/text_operator"
                android:text="-"
                android:textSize="24sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="1"
                android:textSize="24sp"
                app:cornerRadius="36dp"  />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="2"
                android:textSize="24sp"
                app:cornerRadius="36dp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="3"
                android:textSize="24sp"
                app:cornerRadius="36dp"  />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_operator_bg"
                android:textColor="@color/text_operator"
                android:text="+"
                android:textSize="24sp"
                app:cornerRadius="36dp"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="7dp">

            <Button
                android:id="@+id/btnnegate"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_utility_bg"
                android:textColor="@color/text_primary"
                android:text="+/-"
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="0"
                android:textSize="24sp"
                app:cornerRadius="36dp"  />

            <Button
                android:id="@+id/btnpoint"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_number_bg"
                android:textColor="@color/text_primary"
                android:text="."
                android:textSize="24sp"
                app:cornerRadius="36dp" />

            <Button
                android:id="@+id/btnequals"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_operator_bg"
                android:textColor="@color/text_operator"
                android:text="="
                android:textSize="24sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/smalldisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/display_text"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/affichage" />

</androidx.constraintlayout.widget.ConstraintLayout>
